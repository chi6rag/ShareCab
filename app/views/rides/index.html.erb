<%= render partial: 'rides/routemap' %>

<div class="container">
  <div class="row">

    <div class="col-md-offset-1 col-md-10">
    <%= render partial: 'static_pages/form' %>
    </div>

    <div class="col-md-2">
      <% if user_signed_in? %>
        <div class="bfh-timepicker" id="timepicker1" data-time="now"></div>
        <div class="bfh-timepicker" id="timepicker2" data-time="now">
        </div>
      <% end %>
    </div>

<table id="selected-rides">
  <tr>
    <th>ID</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Departure Date</th>
  </tr>

<% @rides.each do |ride| %>
  <tr id="ride-<%= ride.id %>">
    <td><%= link_to ride.id, user_signed_in? ? ride_path(ride) : user_omniauth_authorize_path(:facebook) %></td>
    <td><%= link_to ride.origin, user_signed_in? ? ride_path(ride) : user_omniauth_authorize_path(:facebook) %></td>
    <td><%= link_to ride.destination, user_signed_in? ? ride_path(ride) : user_omniauth_authorize_path(:facebook) %></td>
    <td><%= link_to ride.departure_date, user_signed_in? ? ride_path(ride) : user_omniauth_authorize_path(:facebook) %></td>
  </tr>


<% end %>
</table>
</div>
</div>

 <script type="text/javascript">
  $('#timepicker1').timepicker();
  $('#timepicker2').timepicker();
</script>