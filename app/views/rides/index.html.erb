    <th>Destination</th>
    <th>Departure Date</th>
  </tr>

<% @rides.each do |ride| %>
  <tr id="ride-<%= ride.id %>">
    <td><%= link_to ride.id, ride_path(ride) %></td>
    <td><%= link_to ride.origin, ride_path(ride) %></td>
    <td><%= link_to ride.destination, ride_path(ride) %></td>
    <td><%= link_to ride.departure_date, ride_path(ride) %></td>
  </tr>


<% end %>
</table>

