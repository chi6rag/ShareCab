<!-- div.rides-show -->
<div class="rides-show">
  <%= render partial: 'layouts/header' %>
  <br />
  <!-- div.container -->
  <div class="container">
    <div class="row">
      <!-- div.col-md-8 -->
      <div class="col-md-8">
        <%= render partial: 'rides/routemap_show' %>
      </div>
      <!-- /div.col-md-8 -->
      <!-- div.col-md-4 -->
      <div class="col-md-4">
        <div class="row">
          <!-- div.ride-details-inner-box -->
          <div class="ride-details-inner-box">
            <div class="row">
              <!-- div.route-name -->
              <div class="col-md-12 route-name"><%= @ride.initiator.name %> initiated a ride<br />from <%= @ride.origin.gsub(/,.+/, "") %><br />to <%= @ride.destination.gsub(/,.+/, "") %></div>
              <!-- /div.route-name -->
            </div>
            <div class="row">
              <!-- div.datetime -->
              <div class="datetime">
                <div class="col-md-6"><span class="glyphicon glyphicon-calendar gi-2x"></span><br /><strong>Departure Date:</strong><br/><%= @ride.departure_time.strftime("%d %B %Y") %></div>
                <div class="col-md-6"><span class="glyphicon glyphicon-time gi-2x"></span><br /><strong>Departure Time:</strong><br/><%= @ride.departure_time.localtime.strftime('%I:%M %p') %></div>
              </div>
              <!-- div.datetime -->
            </div>
            <% available_seats = @ride.number_of_seats - @ride.number_of_seats_occupied %>
          </div>
          <!-- /div.ride-details-inner-box -->
          <!-- div.available-seats -->
          <div class="col-md-12"><strong>Availale Seats: </strong><br/><%= available_seats %></div>
          <!-- div.available-seats -->
        </div>
      <% is_current_user_passenger = @ride.passenger_ids.include? current_user.id %>
      <% if((@ride.departure_time < Time.now) && !is_current_user_passenger) %>
        <%= content_tag(:button, "Departed", :class => "btn") %>
      <% elsif((@ride.departure_time < Time.now) && is_current_user_passenger) %>
        <%= content_tag(:button, "Completed", :class => "btn") %>
      <% elsif is_current_user_passenger %>
        <%= content_tag(:button, "Joined", :class => "btn") %>
      <% elsif available_seats > 0 %>
        <%= link_to "Join", ride_path(@ride) , method: :patch, class: "btn btn-block btn-primary" %>
      <% else %>
        <%= content_tag(:button, "No Seats Left", :class => "btn") %>
      <% end %>
      </div>
      <!-- div.col-md-4 -->
    </div>
  </div>
  <!-- /div.container -->

  <div class="container">
    <div class="row">
      <%= content_tag(:div, "#{flash[:warning]}", :class=>"col-md-8 well") if flash[:warning] %>
      <div class="col-md-8 well">
        <%= @ride.origin %> => <%= @ride.destination %>
      </div>
      
    </div><!-- row ends here -->
    <div class="row">
    <%= render partial: 'rides/comment', collection: @comments %>
      <%= form_for([@ride, @comment]) do |f| %>
        <%= f.text_field :body, class: 'form-control' %>
        <%= f.submit :submit %>
      <% end %>
    </div><!-- row ends here -->
  </div><!-- end of container -->  
</div>
<!-- /div.rides-show